// pinito //
#include <stdio.h>
//A=altura E= espacio C= cantidad de filas //
int main (){
	printf ("\t\t\t\t\t<< PINO (triangulo) >>\n ");
	int a;
	int e; 
	int c; 
	printf("De que atura quieres tu triangulo?:\n");
	
	scanf("%d",& c);
	for (a=1;a<=c; a++){
		for(e=1; e<=c-a; e++)
		   printf(" ");
		for(e=1;e<2*a-1;e++)
		   printf("*");
		printf("\n");
		
	}
	
	return 0;
}
